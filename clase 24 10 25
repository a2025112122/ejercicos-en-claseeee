float total_diario(float p, int c){
return p*c;
}
void dia(int dia_num);{
swich(dia_num){
case 1: count<< "lunes"; break;
case 2: count<< "martes"; break;
case 3: count<< "miercoles"; break;
case 4: count<< "jueves"; break;
case 5: count<< "viernes"; break;
case 6: count<< "sabado"; break;
case 7: count<< "domingo"; break;
}
}
